<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >
    <data>
            <variable
                name="lang"
                type="String" />
            <variable
                name="listener"
                type="com.apps.ref.interfaces.Listeners.LoginListener" />
            <variable
                name="loginModel"
                type="com.apps.ref.models.LoginModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.apps.ref.activities_fragments.activity_login.LoginActivity"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:background="@drawable/splash2"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/language_bottom"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="gone"

                />

            <ImageView
                android:id="@+id/town"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/town"
                app:layout_constraintBottom_toBottomOf="parent"
                android:alpha=".4"
                android:scaleType="fitXY"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/imageCar"
                android:layout_width="150dp"
                android:layout_height="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/car"
                android:transitionName="imageCar"
                tools:ignore="UnusedAttribute" />

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintVertical_bias=".3"
                android:src="@drawable/logo"
                android:layout_marginTop="40dp"
                />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageLogo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias=".15"
                android:text="@string/login"

                />
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@id/tv"
                android:layout_marginTop="40dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="5dp"
                app:contentPadding="5dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"


                    >

                    <ImageView
                        android:id="@+id/imageFlag"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/flag_sa"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/tvCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/imageFlag"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:hint="@string/code"
                        android:textColorHint="@color/gray6"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="+966"
                        android:onClick="@{()->listener.showCountryDialog()}"

                        />

                    <EditText
                        android:id="@+id/edtPhone"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:hint="@string/phone_number"
                        android:background="@color/transparent"
                        android:textColorHint="@color/gray6"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:inputType="number"
                        tools:ignore="TextFields"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tvCode"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintEnd_toStartOf="@id/fl"
                        android:text="@={loginModel.phone}"
                        error="@{loginModel.error_phone}"

                        />

                    <FrameLayout
                        android:id="@+id/fl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_gravity="center"
                        android:onClick="@{()->listener.showCountryDialog()}"

                        >
                        <ImageView
                            android:id="@+id/arrow"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_right_arrow"
                            android:padding="5dp"
                            app:tint="@color/black"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:rotation='@{lang.equals("ar")?180:0}'
                            android:visibility="gone"
                            />
                        <ProgressBar
                            android:id="@+id/progBar"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            />
                    </FrameLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tvSkip"
                android:layout_width="60dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@id/cardView"
                app:layout_constraintTop_toBottomOf="@id/cardView"
                android:layout_marginTop="20dp"
                android:textSize="16sp"
                android:textColor="@color/color1"
                android:text="@string/skip"
                android:gravity="center"
                />
            <Button
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvSkip"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="30dp"
                android:background="@color/color2"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="@string/confirm"
                android:onClick="@{()->listener.validate()}"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
