<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="lang"
            type="String" />
        
        <variable
            name="model"
            type="com.apps.ref.models.FamilyModel" />

        <variable
            name="categoryTitle"
            type="String" />

    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/white"
            android:layout_margin="5dp">


            <ImageView
                android:id="@+id/offer_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="10dp"
                image="@{model.logo}"
                android:background="@drawable/small_stroke"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>



            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="@{model.name}"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/offer_image"
                app:layout_constraintTop_toTopOf="@+id/offer_image" />
            <!--                android:text="وجبة مندي"-->

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{categoryTitle}"
                android:textColor="@color/gray6"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintTop_toBottomOf="@id/title"
                tools:ignore="SmallSp" />


            <RatingBar
                android:id="@+id/rating_bar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating='@{(float)model.rate}'
                app:layout_constraintStart_toStartOf="@id/title"
                app:layout_constraintBottom_toBottomOf="@id/offer_image"
                 />


        </androidx.constraintlayout.widget.ConstraintLayout>



    </FrameLayout>

</layout>