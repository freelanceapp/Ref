<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >
    <data>
        <variable
            name="lang"
            type="String" />
        <variable
            name="model"
            type="com.apps.ref.models.OrderModel" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray10"

        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/gray0"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"

                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@color/gray1_trans"
                        android:layout_gravity="center"
                        />
                    <ImageView
                        android:id="@+id/close"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_next"
                        android:padding="8dp"
                        android:tint="@color/color4"
                        android:layout_gravity="center"
                        android:rotation='@{lang.equals("ar")?180:0}'


                        />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:text="@{model.market!=null?model.market.name:(model.market_name.isEmpty()?model.market_address:model.market_name)}"
                        android:textAllCaps="false"
                        android:lines="1"
                        android:ellipsize="end"
                        />
                </LinearLayout>

            </LinearLayout>






        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fitsSystemWindows="true"
            android:fillViewport="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/order_details"
                    android:layout_marginTop="20dp"
                    android:textAllCaps="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_marginTop="10dp"
                    app:contentPadding="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"

                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <androidx.core.widget.NestedScrollView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fillViewport="true"
                            android:fitsSystemWindows="true"

                            >
                            <EditText
                                android:id="@+id/edtOrder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:background="@color/transparent"
                                android:textColorHint="@color/gray8"
                                android:textColor="@color/gray11"
                                android:hint="@string/order_here"
                                android:gravity="top"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:inputType="textMultiLine"
                                android:text="@{model.details}"
                                />
                        </androidx.core.widget.NestedScrollView>
                        <ImageView
                            android:id="@+id/imageCamera"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_camera"
                            android:padding="8dp"
                            android:tint="@color/gray6"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            >
                            <FrameLayout
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                >
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@color/colorPrimary"
                                    />
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_flag"
                                    android:tint="@color/white"
                                    android:padding="3dp"
                                    />

                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray11"
                                android:textSize="13sp"
                                android:text="@string/pick_up"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                />

                        </LinearLayout>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray11"
                            android:textSize="12sp"
                            android:layout_gravity="end"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:maxLines="2"
                            android:text="@{model.market_address}"

                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/gray2"
                            android:layout_marginTop="5dp"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="10dp"
                            >
                            <FrameLayout
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                >
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@color/colorPrimaryDark"
                                    />
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_box"
                                    android:tint="@color/white"
                                    android:padding="4dp"
                                    />

                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/gray11"
                                android:textSize="13sp"
                                android:text="@string/drop_off"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                />
                            <Space
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                />
                            <TextView
                                android:id="@+id/tvChangeLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="12sp"
                                android:text="@string/change_location"
                                />
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_right_arrow"
                                android:tint="@color/colorPrimaryDark"
                                android:padding="5dp"
                                android:rotation='@{lang.equals("ar")?180:0}'
                                />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvDropOff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray11"
                            android:textSize="12sp"
                            android:layout_gravity="end"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:maxLines="2"
                            android:layout_marginTop="8dp"
                            android:text="@{model.client_address}"

                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recViewImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/payment_type"
                    android:layout_marginTop="10dp"
                    android:textAllCaps="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="@color/white"
                        android:layout_margin="5dp"

                        >
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:background="@drawable/small_stroke_primary2"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"

                                >
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_check"
                                    android:tint="@color/colorPrimary"

                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:textSize="15sp"
                                    android:textColor="@color/gray11"
                                    android:text="@string/cash"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="vertical"
                                    >
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="5sp"
                                        android:text="Cash"
                                        tools:ignore="HardcodedText,SmallSp"
                                        android:layout_gravity="center_horizontal"

                                        />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="5sp"
                                        android:text="كــاش"
                                        tools:ignore="HardcodedText,SmallSp"
                                        android:layout_gravity="center_horizontal"
                                        />
                                </LinearLayout>
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/cash"
                                    android:padding="3dp"
                                    />
                            </LinearLayout>
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/gray11"
                        android:textSize="14sp"
                        android:text="@string/coupons"

                        />
                    <TextView
                        android:id="@+id/tvAddCoupon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:text="@string/add_coupon"
                        />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_plus"
                        android:padding="3dp"
                        android:tint="@color/colorPrimary"

                        />

                </LinearLayout>
                <TextView
                    android:id="@+id/tvCoupon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/gray11"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    />
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray8"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/next"
            />
    </LinearLayout>
</layout>
